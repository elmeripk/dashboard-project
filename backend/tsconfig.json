{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* Transpiling with TypeScript */
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,

    /* Code doesn't run in DOM */
    "lib": ["es2022"]
  },
  "references": [
    { "path": "../shared" }
  ],
  "include": ["src"]
}